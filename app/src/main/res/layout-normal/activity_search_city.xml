<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:paddingTop="15dp"
    android:paddingHorizontal="15dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/topRibbon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancelAddCity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="Cancel"
            android:textStyle="bold"
            android:textSize="16sp"
            android:clickable="true"
            android:padding="0dp"
            android:textColor="?attr/android:textColorPrimary"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Add Cities"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="?attr/android:textColorPrimary"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topRibbon"
        android:layout_marginTop="20dp"
        android:padding="0dp"
        app:theme="@style/ThemeOverlay.SearchView"
        android:queryHint="Search City"
        android:iconifiedByDefault="false"
        android:hint="Search City"
        android:inputType="textCapWords"
        android:backgroundTint="@color/whiteColor"
        app:navigationIconTint="?attr/android:textColorPrimary"
        android:searchIcon="@drawable/search_img"
        android:background="@drawable/rectangle_shape"
        android:queryBackground="@android:color/transparent"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_bar"/>

</RelativeLayout>
