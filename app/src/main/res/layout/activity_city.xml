<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:paddingTop="15dp"
    android:paddingHorizontal="15dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/topRibbon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_arrow_img"
            app:tint="?attr/android:textColorPrimary"
            android:clickable="true"
            android:contentDescription="Back Icon"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Manage Cities"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="?attr/android:textColorPrimary"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/manage_cities_img"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/manage_cities_img"
            app:tint="?attr/android:textColorPrimary"
            android:clickable="true"
            android:contentDescription="Back Icon"
            android:layout_gravity="start"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAddedCities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topRibbon"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addCityBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        app:cornerRadius="50dp"
        app:backgroundTint="?attr/buttonTintPrimary"
        android:textColor="?attr/android:textColorPrimary"
        android:textSize="26sp"
        app:icon="@drawable/add_city_img"
        app:iconTint="@color/whiteColor"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="50dp"
        android:stateListAnimator="@null"
        />

</RelativeLayout>
