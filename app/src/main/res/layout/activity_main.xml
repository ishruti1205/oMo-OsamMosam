<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:visibility="visible"
    android:orientation="vertical"
    android:background="@drawable/bg_demo_img"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ProgressBar
            android:id="@+id/loader_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:progressBackgroundTint="@color/offWhiteColor"
            android:progressTint="@color/offWhiteColor"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Jalandhar"
            android:textSize="24sp"
            android:textColor="@color/whiteColor" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/location_img"
            app:tint="@color/whiteColor"
            android:contentDescription="Manage Cities Icon"/>

        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/settings_img"
            app:tint="@color/whiteColor"
            android:contentDescription="Settings Icon"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/current_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text=""
                    android:textSize="100sp"
                    android:textColor="@color/whiteColor"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/weather_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partly Cloudy "
                    android:textSize="16sp"
                    android:textColor="@color/whiteColor"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/temperature_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/whiteColor"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textSize="16sp"
                    android:textColor="@color/whiteColor"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/temperature_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/whiteColor"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Air Quality: "
                    android:textSize="16sp"
                    android:textColor="@color/whiteColor"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/aqi_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/whiteColor"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:textSize="16sp"
                    android:textColor="@color/whiteColor"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/aqi_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moderate"
                    android:textSize="16sp"
                    android:textColor="@color/whiteColor"
                    android:textStyle="bold"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparentBlackColor">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewHourlyWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:contentPaddingTop="3dp"
                app:contentPaddingBottom="3dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparentBlackColor">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewWeeklyWeather"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="10dp"
                    android:nestedScrollingEnabled="false" />
            </androidx.cardview.widget.CardView>

            <!-- Air Quality Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:contentPadding="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparentBlackColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Air quality"
                        android:textSize="14sp"
                        android:textColor="@color/offWhiteColor"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginVertical="5dp"
                        android:backgroundTint="@color/offWhiteColor"
                        android:background="@drawable/line"/>

                    <TextView
                        android:id="@+id/aqi_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Satisfactory 00"
                        android:textSize="20sp"
                        android:textColor="@color/whiteColor"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/aqi_paragraph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Air quality is acceptable.\nHowever, unusually sensitive individuals may experience minor to moderate symptoms from long-term exposure."
                        android:textSize="14sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/whiteColor"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_marginVertical="5dp"
                            android:src="@drawable/aqi_gradient_img"
                            android:scaleType="fitXY"
                            android:contentDescription="AQI Progress Bar Gradient Image"/>

                        <ProgressBar
                            android:id="@+id/aqi_progress_bar"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_marginVertical="5dp"
                            android:progressDrawable="@android:color/transparent"
                            android:progress="78"
                            android:min="0"
                            android:max="500" />

                        <ImageView
                            android:id="@+id/aqi_indicator"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/aqi_progress_indicator"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="0dp"
                            android:layout_centerVertical="true"
                            android:contentDescription="AQI Indicator"/>

                    </RelativeLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Other Information Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- UV Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:contentPadding="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/transparentBlackColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/sun_img"
                            app:tint="@color/whiteColor"
                            android:contentDescription="UV Icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:text="UV"
                            android:textSize="14sp"
                            android:textColor="@color/offWhiteColor"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/uv_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="20sp"
                                android:textColor="@color/whiteColor"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/uv_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" Very weak"
                                android:textSize="12sp"
                                android:textColor="@color/whiteColor"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Feels Like Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:contentPadding="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/transparentBlackColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/feels_like_img"
                            app:tint="@color/whiteColor"
                            android:contentDescription="Feels Like Icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:text="Feels like"
                            android:textSize="14sp"
                            android:textColor="@color/offWhiteColor"/>

                        <TextView
                            android:id="@+id/feels_like_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00 °"
                            android:textSize="20sp"
                            android:textColor="@color/whiteColor"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Humidity Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:contentPadding="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/transparentBlackColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/humidity_img"
                            app:tint="@color/whiteColor"
                            android:contentDescription="Humidity Icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:text="Humidity"
                            android:textSize="14sp"
                            android:textColor="@color/offWhiteColor"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/humidity_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textSize="20sp"
                                android:textColor="@color/whiteColor"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" %"
                                android:textSize="14sp"
                                android:textColor="@color/whiteColor"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Additional Cards for Wind, Air Pressure, Visibility -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Wind Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:contentPadding="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/transparentBlackColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="0.5dp"
                            android:src="@drawable/wind_img"
                            app:tint="@color/whiteColor"
                            android:contentDescription="Wind Icon"/>

                        <TextView
                            android:id="@+id/wind_direction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:text="Wind"
                            android:textSize="14sp"
                            android:textColor="@color/offWhiteColor"/>


<!--                        N: North-->
<!--                        NNE: North-Northeast-->
<!--                        NE: Northeast-->
<!--                        ENE: East-Northeast-->
<!--                        E: East-->
<!--                        ESE: East-Southeast-->
<!--                        SE: Southeast-->
<!--                        SSE: South-Southeast-->
<!--                        S: South-->
<!--                        SSW: South-Southwest-->
<!--                        SW: Southwest-->
<!--                        WSW: West-Southwest-->
<!--                        W: West-->
<!--                        WNW: West-Northwest-->
<!--                        NW: Northwest-->
<!--                        NNW: North-Northwest-->


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/wind_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textSize="20sp"
                                android:textColor="@color/whiteColor"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" m/s"
                                android:textSize="14sp"
                                android:textColor="@color/whiteColor"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Air Pressure Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:contentPadding="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/transparentBlackColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="2.5dp"
                            android:src="@drawable/air_pressure_img"
                            app:tint="@color/whiteColor"
                            android:contentDescription="Air Pressue Icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:text="Air pressure"
                            android:textSize="13sp"
                            android:textColor="@color/offWhiteColor"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/air_pressure_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000"
                                android:textSize="20sp"
                                android:textColor="@color/whiteColor"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" hPa"
                                android:textSize="14sp"
                                android:textColor="@color/whiteColor"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Visibility Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:contentPadding="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/transparentBlackColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/visibility_img"
                            app:tint="@color/whiteColor"
                            android:contentDescription="Visibility Icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:text="Visibility"
                            android:textSize="14sp"
                            android:textColor="@color/offWhiteColor"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/visibility_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textSize="20sp"
                                android:textColor="@color/whiteColor"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" km"
                                android:textSize="14sp"
                                android:textColor="@color/whiteColor"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Sunrise-Sunset Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:contentPadding="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparentBlackColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/left_sun_img"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/sunrise_img"
                            app:tint="@color/whiteColor"
                            android:contentDescription="Sunrise Icon"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/right_sun_img"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/sunset_img"
                            app:tint="@color/whiteColor"
                            android:contentDescription="Sunset Icon"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/left_sun_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="Sunrise"
                            android:textSize="14sp"
                            android:textColor="@color/offWhiteColor"
                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/right_sun_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="Sunset"
                            android:textSize="14sp"
                            android:textColor="@color/offWhiteColor"
                            />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp">

                        <ProgressBar
                            android:id="@+id/sun_progress_bar"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_marginVertical="8dp"
                            android:progressBackgroundTint="@color/transparentWhiteColor"
                            android:progressTint="@color/darkWhiteColor"
                            android:progress="10"
                            android:min="0"
                            android:max="100" />

                        <ImageView
                            android:id="@+id/sun_indicator"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/sun_img"
                            app:tint="@color/whiteColor"
                            android:layout_marginStart="0dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="Sunrise-Sunset Indicator"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/left_sun_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="00:00"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/whiteColor"
                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/right_sun_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="00:00"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/whiteColor"
                            />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


