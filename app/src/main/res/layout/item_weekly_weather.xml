<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="15dp"
    android:layout_marginVertical="9dp"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/weekly_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07"
        android:textSize="14sp"
        android:textColor="@color/whiteColor"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="14sp"
        android:textColor="@color/whiteColor"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/weekly_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="25"
        android:textSize="14sp"
        android:textColor="@color/whiteColor"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/weekly_day"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text="Tomorrow"
        android:textSize="14sp"
        android:textColor="@color/whiteColor"
        android:textStyle="bold"/>

    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/weekly_weather_icon"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/cloudy_img"
        android:layout_gravity="center"
        android:contentDescription="Current Weather Symbol"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/weekly_temperature_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="29°"
        android:textSize="14sp"
        android:textColor="@color/whiteColor"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" / "
        android:textSize="14sp"
        android:textColor="@color/whiteColor"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/weekly_temperature_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="36°"
        android:textSize="14sp"
        android:textColor="@color/whiteColor"
        android:textStyle="bold"/>

</LinearLayout>
