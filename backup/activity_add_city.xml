    <TextView
        android:id="@+id/currentCityHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:layout_marginTop="15dp"
        android:text="Current City"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/android:textColorPrimary"/>

    <Button
        android:id="@+id/currentCityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentCityHead"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        android:paddingStart="5dp"
        android:enabled="true"
        android:text="Jalandhar"
        android:textColor="?attr/android:textColorPrimary"
        android:textSize="16sp"
        app:backgroundTint="?attr/buttonTintPrimary"
        app:icon="@drawable/location_filled_img"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="18dp"
        app:iconTint="?attr/android:textColorPrimary" />

    <TextView
        android:id="@+id/addedCitiesHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentCityBtn"
        android:layout_marginTop="20dp"
        android:text="Added Cities"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/android:textColorPrimary"/>

    <Button
        android:id="@+id/addCityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addedCitiesHead"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        android:enabled="true"
        android:text="Jalandhar"
        android:textColor="?attr/android:textColorPrimary"
        android:textSize="16sp"
        app:backgroundTint="?attr/buttonTintPrimary" />
</RelativeLayout>
